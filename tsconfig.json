{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "compilerOptions": {
      "baseUrl": "./packages",
      "paths": {
        "@web/*": [
          "./*/src"
        ]
      }
    },
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
}